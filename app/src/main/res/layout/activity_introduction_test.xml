<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Tombol Back -->
    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#FFFFFF"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back button" />

    <!-- Progress Indicator (simple view garis) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <View
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:background="#2296F3"
            android:layout_marginEnd="8dp"
            android:alpha="1" />

        <View
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:background="#2296F3"
            android:layout_marginEnd="8dp"
            android:alpha="1" />

        <View
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:background="#2296F3"
            android:layout_marginEnd="8dp"
            android:alpha="1" />

        <View
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:background="#B4D258"
            android:layout_marginEnd="8dp"
            android:alpha="1" />

        <View
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:background="#EBEBEB"
            android:alpha="1" />
    </LinearLayout>

    <!-- Pertanyaan -->
    <TextView
        android:id="@+id/text_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What does the picture mean?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp" />

    <!-- Ilustrasi -->
    <ImageView
        android:id="@+id/image_illustration"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_face_profile"
    android:contentDescription="Illustration"
    android:layout_gravity="center_horizontal" />

    <!-- Pilihan jawaban -->
    <LinearLayout
        android:id="@+id/choices_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:weightSum="2">

        <!-- Button pilihan, akan diinisialisasi via kode atau XML -->
        <Button
            android:id="@+id/button_choice1"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="Sampean"
            android:layout_margin="8dp"
            android:backgroundTint="#2296F3"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button_choice2"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="Soca"
            android:layout_margin="8dp"
            android:backgroundTint="#2296F3"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button_choice3"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="Cepil"
            android:layout_margin="8dp"
            android:backgroundTint="#2296F3"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button_choice4"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="Pangambung"
            android:layout_margin="8dp"
            android:backgroundTint="#2296F3"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Popup Jawaban Benar -->
    <LinearLayout
        android:id="@+id/popup_correct_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E6F0D8"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:text="Amazing!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#47A700"/>

        <TextView
            android:id="@+id/text_answer"
            android:text="Answer: Pangambung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#47A700"/>

        <Button
            android:id="@+id/button_next_question"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Next Question"
            android:backgroundTint="#B4D258"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Popup Jawaban Salah -->
    <LinearLayout
        android:id="@+id/popup_wrong_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFDDD8"
    android:padding="16dp"
    android:visibility="gone"
    android:layout_marginTop="32dp"
    android:layout_gravity="center_horizontal">

    <TextView
        android:text="Ups, What's Wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FF2442" />

    <TextView
        android:id="@+id/text_wrong_answer_correct"
        android:text="Correct answer is: Pangambung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="#FF2442" />

    <Button
        android:id="@+id/button_next_question_wrong"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Next Question"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="12dp" />
</LinearLayout>

</LinearLayout>