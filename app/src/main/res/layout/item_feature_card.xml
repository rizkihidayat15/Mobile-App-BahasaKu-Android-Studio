<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    android:elevation="2dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/bg_level_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_level_1"
            android:id="@+id/icon_level_bg">

            <ImageView
                android:id="@+id/icon_level"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Level Icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_feature_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Hour 30 Minute"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progress_bar"
            android:layout_width="120dp"
            android:layout_height="12dp"
            android:max="100"
            android:indeterminate="false"
            android:progressTint="#4CAF50"
            android:progressBackgroundTint="#E0E0E0" />

        <TextView
            android:id="@+id/text_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9/50"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>