<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Tombol Back -->
    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back button" />

    <!-- Progress bar indicator garis -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal">

        <!-- 3 bar biru, 1 hijau, 1 abu-abu -->
        <View android:layout_width="60dp" android:layout_height="6dp" android:background="#2296F3" android:layout_marginEnd="8dp"/>
        <View android:layout_width="60dp" android:layout_height="6dp" android:background="#2296F3" android:layout_marginEnd="8dp"/>
        <View android:layout_width="60dp" android:layout_height="6dp" android:background="#2296F3" android:layout_marginEnd="8dp"/>
        <View android:layout_width="60dp" android:layout_height="6dp" android:background="#B4D258" android:layout_marginEnd="8dp"/>
        <View android:layout_width="60dp" android:layout_height="6dp" android:background="#EBEBEB"/>

    </LinearLayout>

    <!-- Pertanyaan -->
    <TextView
        android:id="@+id/text_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's the meaning of this sentence?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="24dp"/>

    <!-- Ikon Speaker dan kalimat -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/button_speaker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#2296F3"
            android:src="@drawable/ic_speaker"
            android:contentDescription="Speaker Icon" />

        <TextView
            android:id="@+id/text_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Punten, Nami abdi Asep"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:textColor="#212121"
            android:textStyle="normal" />
    </LinearLayout>

    <!-- Input Jawaban -->
    <EditText
        android:id="@+id/editText_answer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/edit_text_default"
        android:hint="Type your answer here..."
        android:gravity="top"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:inputType="text" />

    <!-- Popup Jawaban benar -->
    <LinearLayout
        android:id="@+id/popup_correct_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:padding="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="20dp">

        <TextView
            android:text="Amazing!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#99CC29" />

        <TextView
            android:id="@+id/text_correct_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Answer: Excuse me, my name is Asep"
            android:textSize="16sp"
            android:textColor="#99CC29" />

        <Button
            android:id="@+id/button_next_question"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Next Question"
            android:backgroundTint="#99CC29"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Popup Jawaban salah -->
    <LinearLayout
        android:id="@+id/popup_wrong_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:padding="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="20dp">

        <TextView
            android:text="Ups, What's Wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#D32F2F" />

        <TextView
            android:id="@+id/text_wrong_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Correct answer is: Excuse me, my name is Asep"
            android:textSize="16sp"
            android:textColor="#D32F2F" />

        <Button
            android:id="@+id/button_next_question_wrong"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Next Question"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Button Check Answer / Next Question -->
    <Button
        android:id="@+id/button_check_answer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Check Answer"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="24dp"/>

</LinearLayout>