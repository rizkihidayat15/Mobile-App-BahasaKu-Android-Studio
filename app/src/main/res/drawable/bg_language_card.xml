<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna dasar card -->
    <solid android:color="@android:color/white"/>

    <!-- Border -->
    <stroke
        android:width="1.5dp"
        android:color="#E0E0E0"/>

    <!-- Sudut melengkung -->
    <corners android:radius="14dp"/>

    <!-- Padding internal -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
